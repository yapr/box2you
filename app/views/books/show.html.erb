<% content_for :title, "#{@translation&.title} - AI Book Summary | Box2You" %>

<div class="max-w-4xl mx-auto">
  <%# Back Button %>
  <div class="mb-6">
    <%= link_to root_path, class: "inline-flex items-center text-blue-600 hover:text-blue-700 font-medium" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Home
    <% end %>
  </div>

  <% if @translation %>
    <%# Book Header %>
    <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
      <div class="flex flex-col md:flex-row gap-8">
        <%# Book Cover Placeholder %>
        <div class="flex-shrink-0">
          <div class="w-48 h-64 bg-gradient-to-br from-blue-100 to-blue-200 rounded-lg flex items-center justify-center shadow-md">
            <svg class="w-16 h-16 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
        </div>

        <%# Book Info %>
        <div class="flex-1">
          <h1 class="text-4xl font-bold text-gray-900 mb-4"><%= @translation.title %></h1>
          
          <% if @translation.author.present? %>
            <p class="text-xl text-gray-600 mb-6">by <%= @translation.author %></p>
          <% end %>

          <%# Status Badge %>
          <div class="mb-6">
            <% if @book.ai_summary_cached? %>
              <span class="bg-green-100 text-green-800 px-4 py-2 rounded-full text-sm font-medium">
                ✓ AI Summary Ready
              </span>
            <% else %>
              <span class="bg-yellow-100 text-yellow-800 px-4 py-2 rounded-full text-sm font-medium">
                ⚡ Generating AI Summary...
              </span>
            <% end %>
          </div>

          <%# Book Metadata %>
          <div class="space-y-2 text-sm text-gray-600">
            <% if @book.isbn.present? %>
              <p><span class="font-medium">ISBN:</span> <%= @book.isbn %></p>
            <% end %>
            <p><span class="font-medium">Popularity Score:</span> <%= @book.popularity_score %></p>
          </div>
        </div>
      </div>
    </div>

    <%# AI Summary Section %>
    <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
        <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        AI-Generated Summary
      </h2>
      
      <% if @translation.summary.present? %>
        <div class="prose prose-lg max-w-none">
          <p class="text-gray-700 leading-relaxed text-lg"><%= @translation.summary %></p>
        </div>
        
        <div class="mt-6 p-4 bg-blue-50 rounded-lg">
          <p class="text-sm text-blue-800">
            <strong>✨ This summary was generated by AI</strong> to help you quickly understand the book's key concepts and decide if it's worth your reading time.
          </p>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"></div>
          <p class="text-gray-600">Generating AI summary... This may take a few moments.</p>
          <button onclick="location.reload()" class="mt-4 text-blue-600 hover:text-blue-700 font-medium">
            Refresh Page
          </button>
        </div>
      <% end %>
    </div>

    <%# Purchase Links %>
    <div class="bg-white rounded-lg shadow-lg p-8">
      <h3 class="text-xl font-bold text-gray-900 mb-6">Get This Book</h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <%# Amazon Link %>
        <a href="#" target="_blank" rel="noopener" class="flex items-center justify-center bg-orange-500 hover:bg-orange-600 text-white font-semibold py-3 px-6 rounded-lg transition-colors">
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M.045 18.02c9.54 4.46 19.14 4.46 23.91 0 .36-.34.09-.8-.35-.68-8.98 2.42-19.13 2.42-23.21 0-.44-.12-.71.34-.35.68z"/>
            <path d="M18.79 16.25c-.45-.3-2.97-.45-4.09-.45-1.16 0-2.86.13-3.67.31-.27.06-.29.42-.05.51 1.02.38 3.4.89 3.4.89s-3.88 1.83-5.25 1.83c-.59 0-.59-.89 0-.89 2.73 0 5.13-.89 6.29-1.39.23-.1.29-.36.11-.5-.45-.35-1.31-.8-1.31-.8s1.92-.15 2.81-.15c1.13 0 2.48.11 3.04.26.22.06.4-.21.23-.35-.45-.37-1.51-.77-1.51-.77z"/>
          </svg>
          Buy on Amazon
        </a>

        <%# Rakuten Link %>
        <a href="#" target="_blank" rel="noopener" class="flex items-center justify-center bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors">
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
          </svg>
          Buy on Rakuten
        </a>
      </div>

      <p class="text-sm text-gray-500 mt-4">
        <em>Note: These are affiliate links. We may earn a commission if you purchase through these links, at no additional cost to you.</em>
      </p>
    </div>

  <% else %>
    <%# No Translation Available %>
    <div class="text-center py-12 bg-white rounded-lg shadow-lg">
      <h1 class="text-2xl font-bold text-gray-900 mb-4">Book Not Available</h1>
      <p class="text-gray-600 mb-6">We don't have information for this book in English yet.</p>
      <%= link_to root_path, class: "inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Browse Other Books
      <% end %>
    </div>
  <% end %>
</div>
